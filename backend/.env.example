# Configuración del servidor
PORT=3000
NODE_ENV=development

# URL del frontend
FRONTEND_URL=http://localhost:5173

# Secretos para autenticación
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Drive API (JSON de credenciales de cuenta de servicio)
# Formato: {"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
GOOGLE_DRIVE_CREDENTIALS=

# Configuración de Base de Datos
# Tipo de base de datos: 'sqlite' (predeterminado) o 'postgres'
DB_TYPE=sqlite

# Configuración de PostgreSQL (solo si DB_TYPE=postgres)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=tlapaleria
PG_USER=postgres
PG_PASSWORD=your-postgres-password
PG_SSL=false

# Para producción en Render/Railway/Supabase, usar DATABASE_URL
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
